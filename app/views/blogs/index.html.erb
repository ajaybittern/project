<div  style="margin-left: 400px;">
<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= form_tag(blogs_path, :method => "get", id: "search-form") do %>
 <%= text_field_tag :search, params[:title], placeholder: "Search blogs" %> 
<%= submit_tag "Search" %> 
<% end %><br>

To date
<%= date_field(:user, :startdate) %>
From  date
<%= date_field(:user, :startdate) %>
<br><br>
<%#= @data = Blog.where("startdate >= from_date AND startdate <= to_date")%>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Category</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
         <td><%=image_tag blog.image, :size=>10*10%><td>

        <td><%= blog.category %></td>
        <td><%= blog.description %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy',  blog,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
<%end%>
</div>